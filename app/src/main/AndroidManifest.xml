<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="beri.android">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".modules.MainModule.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".modules.OnboardingModule.OnboardingActivity" />
        <activity android:name=".modules.MapModule.MapActivity" />
        <activity android:name=".modules.LoginModule.LoginActivity"/>
        <activity android:name=".modules.CategoryModule.CategoryActivity"/>
        <activity android:name=".modules.SubcategoryModule.SubcategoryActivity"/>
        <activity android:name=".modules.ProfileModule.ProfileActivity"/>
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

    </application>

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET"/>

</manifest>